{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",  // Assure-toi d'avoir Ã§a pour React 17+
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "--lib": ["esnext", "dom", "dom.iterable", "scriptHost"]
  },
  "include": ["src", ".storybook"],  // Ajoute Storybook dans le scope
  "exclude": ["node_modules", "dist"],
}
